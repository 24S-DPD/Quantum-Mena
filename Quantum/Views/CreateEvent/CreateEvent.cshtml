
@{
    ViewData["Title"] = "Create Event";
}

<div style="">
   
        
        <img src="~/imges/EventPageIco.png" height="100" width="100" />
        <h3 style="text-align:center">Create Event !</h3>
       
</div>




<hr />



<h3>Event Data</h3>

<br />





<div class="row">

    <div class="col-md-8 mx-auto rounded border p-4">



        @* Create Event Frm *@
        <form method="post" asp-controller="CreateEvent" asp-action="CreateEvent">




            <div class="row mb-3">

                <label class="col-sm-4 col-form-label" for="eventName">Event Name : </label>

                <div class="col-sm-2">
                    <input type="text" class="form-control"  style="width: 300px" placeholder="Event Name" id="eventName" />
                </div>


            </div>


            <div class="row mb-3">

                <label class="col-sm-4 col-form-label" for="evntDate">Event Date   :</label>

                <div class="col-sm-2">
                    <input type="date" class="form-control" style="width: 300px" id="evntDate">
                </div>




            </div>













        </form>




    </div>




</div>

